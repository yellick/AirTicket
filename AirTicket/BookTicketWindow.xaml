<Window x:Class="AirTicket.BookTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirTicket"
        mc:Ignorable="d" Background="#FF3C3C3C"
        Title="BookTicketWindow" Height="120" Width="200">
    <Grid>
        <ComboBox x:Name="selectClass" Margin="21,15,21,0" VerticalAlignment="Top">
            <ComboBoxItem Content="1 - 1-Класс"/>
            <ComboBoxItem Content="2 - Бизнес класс"/>
            <ComboBoxItem Content="3 - Комфорт"/>
            <ComboBoxItem Content="4 - Эконом"/>
        </ComboBox>
        <Button x:Name="bookBtn" Content="Забронировать" Margin="46,54,46,0" VerticalAlignment="Top" Click="bookBtn_Click"/>
    </Grid>
</Window>
